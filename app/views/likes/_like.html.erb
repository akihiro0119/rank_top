<% if user_signed_in? %>
    <% if post.like_user(current_user.id) %>
        <p><span>お気に入り解除: </span><%=link_to post.likes.count, post_likes_path(post.id), method: :delete, remote: true %>
        <i class="fas fa-star"></i></p>
    <% else %>
        <p><span>お気に入り登録: </span><%=link_to post.likes.count, post_likes_path(post.id), method: :post, remote: true %>
        <i class="far fa-star"></i></p>
    <% end %>
<% else %>
<i class="far fa-star"></i>
    <p><span>お気に入り数: </span><%= post.likes.count %></p>
<% end %>

