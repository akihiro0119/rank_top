 <button type="button" class="btn btn-outline-primary"><%= link_to "TOPページへ",root_path, method: :get %></button>
 
 <%= form_with model: @post, local: true do |form| %>

     <div class="form-group">
      <%= form.text_area :title, class:"form-control", placeholder: "タイトルを入力してください" %>
     </div>
    

    <div class="form-group">
      <label for="exampleFormControlTextarea1"></label> 
      <%= form.text_area :rank1,class:"form-control", placeholder: "１位を入力してください" %>１位
      <%= form.text_area :rank2,class:"form-control", placeholder: "２位を入力してください" %>２位
      <%= form.text_area :rank3,class:"form-control" ,placeholder: "３位を入力してください" %>３位
    </div>

    <div class="form-group">
      <label for="exampleFormControlFile1">画像は１枚まで投稿できます</label>
      <%= form.file_field :image, class:"form-control-file"%>
    </div>


    <div class='form-group'>
        <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

    <%= form.submit "投稿する" ,class:"sell-btn" %>

<% end %>

