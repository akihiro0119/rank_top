 <%= form_with(model: @post, local: true) do |form| %>

     <div class="form-group">
      <%= form.text_field :title, class:"form-control", placeholder: "タイトルを入力してください" %>
     </div>
    

    <div class="form-group">
      <label for="exampleFormControlTextarea1"></label> 
      <%= form.text_area :rank1,class:"form-control", placeholder: "１位を入力してください" %>１位
      <%= form.text_area :rank2,class:"form-control", placeholder: "２位を入力してください" %>２位
      <%= form.text_area :rank3,class:"form-control" ,placeholder: "３位を入力してください" %>３位
    </div>

    <div class="form-group">
      <label for="exampleFormControlFile1">Example file input</label>
      <%= form.file_field :image, class:"form-control-file"%>
    </div>

    <%= form.submit "投稿する" ,class:"sell-btn" %>

    <% end %>
